@using Sheltos.ViewModel.ShoppingCart
@model CheckOutViewModel
@{
}
<!-- breadcrumb start -->
<section class="breadcrumb-section p-0">
    <img src="~/assets/images/inner-background.jpg" class="bg-img img-fluid" alt="">
    <div class="container">
        <div class="breadcrumb-content">
            <div>
                <h2>ShoppingCart</h2>
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="HomePage.html">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page"> CheckOut</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb end -->
<!-- user dashboard section start -->
<section class="user-dashboard small-section">
    <div class="Container-fluid">
        <div class="container">
            <div class="row">

                <!-- Container-fluid start -->
                <div class="col-lg-12">
                    <div class="dashboard-content">
                        <div class="create-tab" id="create-property">
                            <div class="property-wizard common-card">
                                <div class=" common-header">
                                    <h5>CheckOut Details</h5>
                                </div>
                            </div>
                            <div class="card-body admin-form">
                                <form class="row gx-3" asp-action="CheckOut" method="post" enctype="multipart/form-data">
                                    <div class="form-group col-md-6 col-sm-6">
                                        <label asp-for="FullName">Full name <span class="font-danger">*</span></label>
                                        <input type="text" asp-for="FullName" class="form-control" placeholder="enter your name" required="">
                                    </div>
                                    <div class="form-group col-md-4 col-sm-6">
                                        <label asp-for="PhoneNumber">Phone number <span class="font-danger">*</span></label>
                                        <input type="number" asp-for="PhoneNumber" class="form-control" placeholder="enter your mobile number" required="">
                                    </div>
                                    <div class="form-group col-md-4 col-sm-6">
                                        <label asp-for="Email">Email-Address <span class="font-danger">*</span></label>
                                        <input class="form-control" asp-for="Email" type="email" placeholder="gmail.com" id="datepicker" />
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label asp-for="Address">Address</label>
                                        <input type="text" asp-for="Address" class="form-control" placeholder="Enter your Address">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label asp-for="PaymentMethod">Payment Method</label>
                                        <select asp-for="PaymentMethod" class="form-control">
                                            <option value="Card">Card</option>
                                            <option value="Bank Transfer">Bank Transfer(9057247888,Opay)</option>
                                            <option value="Wallet">Wallet - “bc1qc68nfq65ut0dslspuv9w79fz6r4e7x49fgvh35”</option>
                                        </select>
                                    </div>

                                    <div class="form-btn">
                                        <button type="submit" class="btn btn-pill btn-gradient color-4">Submit</button>
                                        <button type="button" class="btn btn-pill btn-dashed color-4">Cancel</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid end -->

        </div>


    </div>
</sect
